{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "../types/**/*.d.ts",
    "../app/**/*.d.ts"
  ]
}
